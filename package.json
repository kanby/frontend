{
  "scripts": {
    "build": "webpack --progress",
    "dev": "node server.dev.js",
    "lint": "yarn lint:js && yarn lint:css",
    "lint:js": "xo",
    "lint:css": "stylelint ./**/*.css",
    "lint:fix": "xo --fix",
    "start": "node dist/server.js",
    "test": "mocha",
    "test:watch": "mocha --watch"
  },
  "dependencies": {
    "chalk": "^1.1.3",
    "eslint-plugin-inferno": "^6.8.0",
    "fecha": "^2.3.0",
    "history": "^4.5.0",
    "inferno": "^1.1.1",
    "inferno-redux": "^1.1.1",
    "inferno-router": "^1.1.1",
    "inferno-server": "^1.1.1",
    "koa": "next",
    "koa-compose": "next",
    "koa-router": "^7.1.0",
    "normalize.css": "^5.0.0",
    "postcss-cssnext": "^2.9.0",
    "redux": "^3.6.0"
  },
  "devDependencies": {
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-inferno": "^1.5.0",
    "babel-plugin-webpack-alias": "^2.1.2",
    "babel-preset-latest": "^6.16.0",
    "babel-preset-node7": "^1.4.0",
    "chai": "^3.5.0",
    "css-loader": "^0.26.1",
    "css-modules-require-hook": "^4.0.5",
    "eslint": "^3.13.0",
    "eslint-config-airbnb-base": "^11.0.0",
    "eslint-import-resolver-webpack": "^0.8.0",
    "eslint-plugin-import": "^2.2.0",
    "koa-connect": "git://github.com/vkurchatkin/koa-connect#vNext",
    "koa-mount": "next",
    "mocha": "^3.2.0",
    "mocha-junit-reporter": "^1.12.2",
    "mocha-multi-reporters": "^1.1.3",
    "postcss": "^5.2.8",
    "postcss-loader": "^1.2.1",
    "postcss-modules-extract-imports": "^1.0.1",
    "postcss-modules-local-by-default": "^1.1.1",
    "postcss-modules-scope": "^1.0.2",
    "postcss-modules-values": "^1.2.2",
    "sinon": "^1.17.7",
    "sinon-chai": "^2.8.0",
    "style-loader": "^0.13.1",
    "stylelint": "^7.7.1",
    "stylelint-config-css-modules": "^0.1.0",
    "stylelint-config-standard": "^15.0.1",
    "webpack": "2.2.0-rc.3",
    "webpack-dev-middleware": "^1.9.0",
    "webpack-hot-middleware": "^2.15.0",
    "webpack-merge": "^2.3.1",
    "webpack-node-externals": "^1.5.4",
    "xo": "^0.17.1"
  },
  "xo": {
    "esnext": true,
    "extends": [
      "airbnb-base",
      "plugin:inferno/recommended"
    ],
    "plugins": [
      "inferno",
      "unicorn"
    ],
    "settings": {
      "import/resolver": "webpack"
    },
    "rules": {
      "inferno/prop-types": 1,
      "inferno/jsx-filename-extension": 0,
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": [
            "./test/*.js",
            "**/*spec.js",
            "postcss.config.js",
            "webpack.config.js",
            "server.dev.js"
          ]
        }
      ]
    },
    "space": true,
    "overrides": [
      {
        "files": "server/middleware/**/!(*.spec).js",
        "rules": {
          "no-param-reassign": 0
        }
      },
      {
        "files": "server/templates/**/!(*.spec).js",
        "rules": {
          "inferno/no-danger": 0
        }
      },
      {
        "files": [
          "server/**/*.spec.js",
          "client/**/*.spec.js",
          "shared/**/*.spec.js"
        ],
        "envs": [
          "mocha"
        ],
        "rules": {
          "no-unused-expressions": 0
        }
      },
      {
        "files": "client/**/!(*.spec).js",
        "envs": [
          "browser"
        ]
      }
    ]
  }
}
