{
  "scripts": {
    "build": "yarn build:server",
    "build:server": "webpack --progress",
    "lint": "xo",
    "start": "node dist/server.js",
    "test": "yarn test:client;yarn test:shared;yarn test:server",
    "test:client": "mocha --opts .mocharc client/**/*.spec.js",
    "test:shared": "mocha --opts .mocharc shared/**/*.spec.js",
    "test:server": "mocha --opts .mocharc server/**/*.spec.js"
  },
  "dependencies": {
    "apollo-client": "^0.5.20",
    "chalk": "^1.1.3",
    "fecha": "^2.3.0",
    "koa": "next",
    "koa-router": "next",
    "react": "^15.4.1",
    "react-apollo": "^0.7.1",
    "react-redux": "^5.0.1",
    "react-router": "^3.0.0",
    "react-router-redux": "^4.0.7",
    "redux": "^3.6.0"
  },
  "devDependencies": {
    "babel-core": "^6.20.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-preset-latest": "^6.16.0",
    "babel-preset-node7": "^1.4.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-react-hmre": "^1.1.1",
    "chai": "^3.5.0",
    "enzyme": "^2.7.0",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.8.0",
    "mocha": "^3.2.0",
    "webpack": "2.2.0-rc.0",
    "xo": "^0.17.1"
  },
  "xo": {
    "esnext": true,
    "extends": [
      "airbnb"
    ],
    "plugins": [
      "unicorn"
    ],
    "rules": {
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": [
            "**/*spec.js"
          ]
        }
      ]
    },
    "space": true,
    "overrides": [
      {
        "files": "server/middleware/**/*.js",
        "rules": {
          "no-param-reassign": 0
        }
      },
      {
        "files": "**/*spec.js",
        "envs": [
          "mocha"
        ],
        "rules": {
          "no-unused-expressions": 0
        }
      }
    ]
  }
}
